<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"
    android:layout_marginTop="@dimen/dim6"
    android:layout_marginBottom="@dimen/dim6"
    android:background="@color/theme_light_blue_color"
    android:backgroundTint="@color/transparent"
    app:cardCornerRadius="@dimen/dim10">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/theme_light_blue_color"
        android:paddingTop="@dimen/dim15"
        android:paddingBottom="@dimen/dim15"
        android:paddingStart="@dimen/dim10"
        android:paddingEnd="@dimen/dim10"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dim10"
            android:backgroundTint="@color/transparent"
            app:cardCornerRadius="@dimen/dim24">

            <ImageView
                android:id="@+id/img_profile_pic"
                android:layout_width="@dimen/dim60"
                android:layout_height="@dimen/dim60"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/llCenterTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/ivNotificationIcon"
            android:layout_toEndOf="@+id/cardProfile"
            android:orientation="vertical"
            android:paddingStart="@dimen/dim15"
            android:paddingEnd="5dp">

            <TextView
                android:id="@+id/tv_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim10"
                android:fontFamily="@font/rubik_medium"
                android:text="@string/inbox"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/tv_Message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim5"
                android:fontFamily="@font/rubik_regular"
                android:lineSpacingExtra="@dimen/dim5"
                android:maxLines="2"
                android:text="a.sdnflnsldfnlsnfln"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp15" />

        </LinearLayout>


        <ImageView
            android:id="@+id/ivNotificationIcon"
            android:layout_width="@dimen/dim20"
            android:layout_height="@dimen/dim20"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dim5"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/dim5"
            android:layout_marginTop="@dimen/dim10"
            android:gravity="center" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>

