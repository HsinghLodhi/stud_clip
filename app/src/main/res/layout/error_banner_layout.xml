<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="horizontal"
    app:cardCornerRadius="@dimen/dim15"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/accent_color"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/dim15"
        android:paddingStart="@dimen/dim30"
        android:paddingTop="@dimen/dim15"
        android:paddingBottom="@dimen/dim15">

        <ImageView
            android:layout_width="@dimen/dim40"
            android:layout_height="@dimen/dim40"
            android:layout_gravity="center"
            android:src="@mipmap/app_icon_foreground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/dim10"
            android:paddingEnd="@dimen/dim10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/error_title_txt"
                android:fontFamily="@font/rubik_medium"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/tvErrorMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim5"
                android:fontFamily="@font/rubik_regular"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>