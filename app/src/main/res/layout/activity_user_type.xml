<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context=".ui.common.UserTypeActivity">

    <include
        layout="@layout/back_button"
        android:layout_margin="@dimen/dim15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim20"
            android:layout_marginEnd="@dimen/dim20"
            android:orientation="vertical">

            <include
                android:id="@+id/img_studclips"
                layout="@layout/studclip_icon_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dim50"
                android:fontFamily="@font/rubik_semibold"
                android:text="Which one are you?"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/playerLay"
                    android:layout_width="0dp"
                    android:scaleX="1.2"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ic_player_deactive" />

                <RelativeLayout
                    android:id="@+id/FanLay"
                    android:scaleX="1.2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ic_fan_deactive" />


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:enabled="false"
        android:alpha=".3"
        android:id="@+id/button_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dim40"
        android:layout_marginStart="@dimen/dim15"
        android:layout_marginEnd="@dimen/dim15"
        android:background="@drawable/round_red_background"
        android:fontFamily="@font/rubik_semibold"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/sp16" />


</RelativeLayout>